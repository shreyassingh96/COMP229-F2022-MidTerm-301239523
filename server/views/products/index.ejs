<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Prodcut details</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="products/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add a product</a
      >
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th class="text-center">Product id</th>
              <th class="text-center">Product Name</th>
              <th class="text-center">Description</th>
              <th class="text-center">Price</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < products.length; count++) { %>
            <tr>
              <td class="text-center"><%= products[count].Productid %></td>
              <td class="text-center"><%= products[count].Productname %></td>
              <td class="text-center"><%= products[count].Description %></td>
              <td class="text-center"><%= products[count].Price %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="products/<%= products[count]._id %>"+count class="btn btn-primary"><i class="fa fa-plus"></i> Edit</a>
              </td>

              <td class="text-center">
                <!-- ------------------------ -->
    <!-- ADD the DELETE BUTTON HERE -->
    <!-- ------------------------ -->
    <a href="products/delete/<%= products[count]._id %>" class="btn btn-warning btn-sm">
      <i class="fas fa-remove"></i> Delete</a>
      </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  
    
  
  

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
